@model IEnumerable<BitzfitechWebApplication.Models.UsersDB>

@{
    ViewBag.Title = "Current Users";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New User", "Create")
</p>
<table class="scatter-x">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TwitterHandle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FavNetflix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumCats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataShare)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @{ var email = Html.DisplayFor(modelItem => item.Email);}
            <a href="mailto:@email">@email</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TwitterHandle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FavNetflix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumCats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataShare)
        </td>
        <td>
            @Html.ActionLink("Edit User", "Edit", new { id=item.Id }) |
            @Html.ActionLink("View Profile", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete User", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
